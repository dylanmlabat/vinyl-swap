<!DOCTYPE html>
<html class="no-js" lang="en">
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="wrapper">
      <%= yield %>
      <footer class="branding">
        <% if logged_in? %>
          <%= form_tag :search do %>
            <%= text_field_tag :search %>
            <%= submit_tag 'Search by Artist' %>
            <% if flash[:error] %>
              <div id='error_explanation'><small><%= flash[:error] %></small></div>
            <% end %>
          <% end %><br>

          Currently logged in as: <%= link_to current_user.username, user_path(current_user) %>
          <%= button_to 'Log Out', logout_path, method: :post %><br>
        <% end %>
        <p><small>&copy; 2019 <strong><a href="/">Vinyl Swap</a></strong></small>
      </footer>
    </div>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
  </body>
</html>
