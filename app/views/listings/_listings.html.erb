<% if @listings.empty? %>
  None yet!
<% else %>
  <% @listings.each do |listing| %>
    <% if @user %>
      <%= listing.album.artist %> - <%= listing.album.title %><br>
    <% elsif @album %>
      <%= link_to "#{listing.condition} condition - $#{listing.price}", user_listing_path(listing.user, listing) %><br>
    <% end %>
    <small>Sold by <%= link_to "#{listing.user.username}", user_path(listing.user) %></small><br><br>
  <% end %>
<% end %>
